<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/searchFragment">

    <fragment
        android:id="@+id/countrySelectFragment"
        android:name="ru.practicum.android.diploma.util.temp_package_for_screen.fragments.CountrySelectFragment"
        android:label="fragment_country_select"
        tools:layout="@layout/fragment_country_select" />
    <fragment
        android:id="@+id/favoriteFragment"
        android:name="ru.practicum.android.diploma.util.temp_package_for_screen.fragments.FavoriteFragment"
        android:label="fragment_favorite"
        tools:layout="@layout/fragment_favorite" />
    <fragment
        android:id="@+id/filterFragment"
        android:name="ru.practicum.android.diploma.util.temp_package_for_screen.fragments.FilterFragment"
        android:label="fragment_filter"
        tools:layout="@layout/fragment_filter" >
        <action
            android:id="@+id/action_filterFragment_to_workPlaceSelectFragment"
            app:destination="@id/workPlaceSelectFragment" />
        <action
            android:id="@+id/action_filterFragment_to_industrySelectFragment2"
            app:destination="@id/industrySelectFragment2" />
    </fragment>
    <fragment
        android:id="@+id/regionSelectFragment"
        android:name="ru.practicum.android.diploma.util.temp_package_for_screen.fragments.RegionSelectFragment"
        android:label="fragment_region_select"
        tools:layout="@layout/fragment_region_select" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="ru.practicum.android.diploma.util.temp_package_for_screen.fragments.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_vacancyDetailFragment"
            app:destination="@id/vacancyDetailFragment" />
        <action
            android:id="@+id/action_searchFragment_to_favoriteFragment"
            app:destination="@id/favoriteFragment" />
        <action
            android:id="@+id/action_searchFragment_to_teamFragment"
            app:destination="@id/teamFragment" />
        <action
            android:id="@+id/action_searchFragment_to_filterFragment"
            app:destination="@id/filterFragment" />
    </fragment>
    <fragment
        android:id="@+id/teamFragment"
        android:name="ru.practicum.android.diploma.util.temp_package_for_screen.fragments.TeamFragment"
        android:label="fragment_team"
        tools:layout="@layout/fragment_team" />
    <fragment
        android:id="@+id/vacancyDetailFragment"
        android:name="ru.practicum.android.diploma.util.temp_package_for_screen.fragments.VacancyDetailFragment"
        android:label="fragment_vacancy_detail"
        tools:layout="@layout/fragment_vacancy_detail" />
    <fragment
        android:id="@+id/workPlaceSelectFragment"
        android:name="ru.practicum.android.diploma.util.temp_package_for_screen.fragments.WorkPlaceSelectFragment"
        android:label="fragment_work_place_select"
        tools:layout="@layout/fragment_work_place_select" >
        <action
            android:id="@+id/action_workPlaceSelectFragment_to_regionSelectFragment"
            app:destination="@id/regionSelectFragment" />
        <action
            android:id="@+id/action_workPlaceSelectFragment_to_countrySelectFragment"
            app:destination="@id/countrySelectFragment" />
    </fragment>
    <fragment
        android:id="@+id/industrySelectFragment2"
        android:name="ru.practicum.android.diploma.util.temp_package_for_screen.fragments.IndustrySelectFragment"
        android:label="fragment_industry_select"
        tools:layout="@layout/fragment_industry_select" />
</navigation>
